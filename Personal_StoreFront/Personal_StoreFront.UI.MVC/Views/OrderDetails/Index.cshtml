@model IEnumerable<Personal_StoreFront.DATA.EF.Models.OrderDetail>

@{
    ViewData["Title"] = "Index";
}

<section class="product_section gray-section pb-4 pt-4 mb-4">
    <div class="heading_container heading_center">
        <h2 class="text-center" align="center">
            The <span>Orders</span>
        </h2>
        <p class="text-center" align="center">

            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Create">Add an Order</a>

            }

        </p>
    </div>
</section>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipToName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipZip)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th> Actions </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipToName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipZip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipCountry)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsActive)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.UserId)
                </td>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.OrderId">Edit | </a>                       
                        <a asp-action="Delete" asp-route-id="@item.OrderId"> Delete | </a>
                    }
                    <a asp-action="Details" asp-route-id="@item.OrderId"> Details </a>
                </td>
            </tr>
        }
    </tbody>
</table>

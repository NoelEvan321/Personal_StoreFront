@model Personal_StoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Add Product";
}

<section class="product_section gray-section pb-4 pt-4 mb-4">
    <div class="heading_container heading_center">
        <h2 class="text-center" align="center">
            Add <span> Stuff</span>
        </h2>
    </div>
</section>

<div class="row mb-3">
    <div class="col-md-6 offset-3">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardConditionId" class="control-label"></label>
                <select asp-for="CardConditionId" class ="form-control" asp-items="ViewBag.CardConditionId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProductSeries" class="control-label"></label>
                <input asp-for="ProductSeries" class="form-control" />
                <span asp-validation-for="ProductSeries" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CardDescription" class="control-label"></label>
                <input asp-for="CardDescription" class="form-control" placeholder="If product is not a card, please leave blank."/>
                <span asp-validation-for="CardDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductDescription" class="control-label"></label>
                <input asp-for="ProductDescription" class="form-control" />
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPrice" class="control-label"></label>
                <input asp-for="ProductPrice" class="form-control" />
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsInStock" class="control-label"></label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UnitsOnOrder" class="control-label"></label>
                <input asp-for="UnitsOnOrder" class="form-control" />
                <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductPicture" class="control-label"></label>
                @*<input asp-for="ProductPicture" class="form-control" />*@
                <input type="file" asp-for="Image" class="form-control" />
                <span asp-validation-for="ProductPicture" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TypeId" class="control-label"></label>
                <select asp-for="TypeId" class ="form-control" asp-items="ViewBag.TypeId"></select>
            </div>
            <div class="form-group" align="center">
                <input type="submit" value="Add the Stuff" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="row text-center">
    <a asp-action="Index" style="margin: auto;">Back to Stuffs</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Personal_StoreFront.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Delete " + Model.ProductName + "?";
}

<section class="product_section gray-section pb-4 pt-4 mb-4">
    <div class="heading_container heading_center">
        <h2 class="text-center" align="center">
            Delete <span>@Model.ProductName</span>?
        </h2>
        <h3 class="text-center" align="center">This will permanently delete the record and cannot be undone.</h3>
    </div>
</section>
<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductSeries)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductSeries)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CardDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitsInStock)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitsInStock)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UnitsOnOrder)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UnitsOnOrder)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductPicture)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductPicture)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CardCondition)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CardCondition.Condition)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.CategoryName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Type)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Type.ProductType1)<!--TODO: Look into editing this name and the type properties all together.-->
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ProductId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" style="margin: auto;">Back to Products</a>
    </form>
</div>
